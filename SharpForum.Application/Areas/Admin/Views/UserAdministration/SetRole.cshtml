@model SharpForum.Models.ViewModels.User.UserRolesViewModel

@{
    ViewBag.Title = "Edit Category";
}

<div class="list-group">
    <!-- Set UserRole Header -->
    <div class="list-group-item list-group-item-info">
        <strong>Set User Role</strong>
    </div>
    <!-- Form -->
    <div class="list-group-item">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
                @using (Html.BeginForm("SetRole", "UserAdministration", new { area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Set role for user id @ViewContext.RouteData.Values.FirstOrDefault().Value.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="sel1">Roles:</label>
                        <select class="form-control" name="RoleName" id="RoleName">
                            @foreach (var role in Model.UserRoleNames)
                            {
                                <option>@role</option>
                            }
                        </select>
                    </div>
                    <input type="hidden" name="UserId" id="UserId" value="@ViewContext.RouteData.Values.FirstOrDefault().Value">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Change Role" />
                        </div>
                    </div>
                }

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
                <!-- /form -->
            </div>
        </div>
    </div>
</div>