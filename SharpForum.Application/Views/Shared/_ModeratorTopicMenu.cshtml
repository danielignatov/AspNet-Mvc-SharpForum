@model SharpForum.Models.ViewModels.Topic.TopicAuthorRepliesAuthorsViewModel

<!-- Edit Topic Button -->
<a href="/moderator/TopicModeration/edit/@Model.Topic.Id"><i class="fas fa-pencil-alt fa-sm"></i></a>
<!-- Lock Topic Button -->
@if (Model.Topic.IsLocked)
{
    <a href="/moderator/TopicModeration/unlock/@Model.Topic.Id" title="Unlock"><i class="fas fa-unlock fa-sm"></i></a>
}
else
{
    <a href="/moderator/TopicModeration/lock/@Model.Topic.Id" title="Lock"><i class="fas fa-lock fa-sm"></i></a>
}
<!-- Stick Topic Button -->
@if (Model.Topic.IsSticky)
{
    <a href="/moderator/TopicModeration/unstick/@Model.Topic.Id" title="Unstick"><i class="fas fa-fire fa-sm"></i></a>
}
else
{
    <a href="/moderator/TopicModeration/stick/@Model.Topic.Id" title="Stick"><i class="fas fa-fire fa-sm"></i></a>
}
<!-- Delete Topic Button -->
<a href="/moderator/TopicModeration/delete/@Model.Topic.CategoryId/@Model.Topic.Id"><i class="fas fa-trash fa-sm"></i></a>